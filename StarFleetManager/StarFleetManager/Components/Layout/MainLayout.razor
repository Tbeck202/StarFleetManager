@inherits LayoutComponentBase

<div class="page">
    
    
    <main>
        <NavMenu />

        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <p>An error occured</p>
                    <p>@context.Message</p>
                </ErrorContent>
            </ErrorBoundary>
            
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
